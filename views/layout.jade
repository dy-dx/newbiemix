doctype html
html(lang="en", ng-app="myApp")
  head
    meta( charset='utf-8' )
    meta( http-equiv='X-UA-Compatible', content='IE=edge,chrome=1' )
    base(href='/')
    title TF2 Newbie Mix
    link(rel='stylesheet', href='/css/bootstrap.css')
    - if (loggedIn)
      style.
        body {
          padding-top: 106px;
          padding-bottom: 86px;
        }
    - else
      style.
        body {
          padding-top: 60px;
          padding-bottom: 40px;
        }
    link(rel='stylesheet', href='/css/style.css')
  body(ng-controller='MainCtrl')
    #container
      block body
    script( src='/socket.io/socket.io.js' )
    //- script( src='/js/vendor/jquery-1.8.2.min.js' )
    script( src='//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js' )

    //- This is a custom build of jquery-ui, ONLY for sortable lists
    script( src='/js/vendor/jquery-ui-1.9.0.custom.js' )
    script( src='/js/vendor/underscore-min.js' )

    //- Load tf.js before angular or else sockets don't work???
    script( src='/js/tf.js' )
    //- script( src='/js/vendor/angular.js' )
    script( src='//ajax.googleapis.com/ajax/libs/angularjs/1.0.2/angular.min.js' )

    //- Angular-UI for jQuery Passthrough (sortable)
    script( src='/js/vendor/angular-ui.js' )
    script( src='/js/vendor/bootstrap.js' )
    script( src='/js/vendor/jquery.keylisten.js' )
    script( src='/js/vendor/jquery.transform.light.js' )
    script( src='/js/app.js' )
    script( src='/js/controllers.js' )
    script( src='/js/services.js' )
