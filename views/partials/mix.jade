.row
  .span12
    .home-content
      .mix-info
        .mix-teams.clearfix
          ul.pull-left
            li red guys
            li(ng-repeat='player in mix.redteam')
              a(href='http://steamcommunity.com/profiles/{{player._id}}', target='_blank')
                img(ng-src="{{player.avatar}}")
                span &nbsp;{{player.name}} - {{player.class}} - {{player.rank}}
          ul.pull-right
            li blue guys
            li(ng-repeat='player in mix.bluteam')
              a(href='http://steamcommunity.com/profiles/{{player._id}}', target='_blank')
                img(ng-src="{{player.avatar}}")
                span &nbsp;{{player.name}} - {{player.class}} - {{player.rank}}
        .input-append.connect-string
          input(readonly, type='text', onmouseover='this.select();', value='connect {{mix.server.ip}}; password {{mix.server.password}}')
          a.btn.btn-primary(href='steam://connect/{{mix.server.ip}}/{{mix.server.password}}') Connect to Server
